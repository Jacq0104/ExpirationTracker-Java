<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- 灰色圓底 -->
    <solid android:color="#E0E0E0" />

    <!-- 可選：外框線條 -->
    <stroke
        android:width="2dp"
        android:color="#B0B0B0" />

    <!-- 內邊距 -->
